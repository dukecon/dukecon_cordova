<?xml version='1.0' encoding='utf-8'?>
<widget id="org.dukecon.mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DukeCon</name>
    <description>
        A Apache Cordova wrapper for DukeCon.
    </description>
    <author email="feedback@dukecon.org" href="http://dukecon.org">
        DukeCon Team
    </author>
    <icon src="res/favicon.png"/>
    <content src="http://dev.dukecon.org/testing/index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-inappbrowser" version="1" />
    <access origin="http://*.dukecon.org/*" />
    <allow-navigation href="http://*.dukecon.org/*" />
    <allow-navigation href="https://*.dukecon.org/*" />
    <allow-navigation href="https://*.dukecon.org/*" />
    <allow-navigation href="https://*.github.com/*" />
    <allow-navigation href="https://accounts.google.com/*" />
    <allow-navigation href="https://api.twitter.com/*" />
    <allow-navigation href="https://www.linkedin.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <splash src="res/logo_javaland.png" width="320" height="480"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="wp8">
        <splash src="res/logo_javaland.png"/>
    </platform>
</widget>
