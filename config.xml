<?xml version='1.0' encoding='utf-8'?>
<widget id="org.dukecon.mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DukeCon</name>
    <description>
        A Apache Cordova wrapper for DukeCon.
    </description>
    <author email="michal@harakal.de" href="http://dukecon.org">
        Apache Cordova Team
    </author>
    <content src="http://dev.dukecon.org/latest/index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-inappbrowser" version="1" />
    <access origin="http://*.dukecon.org/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
